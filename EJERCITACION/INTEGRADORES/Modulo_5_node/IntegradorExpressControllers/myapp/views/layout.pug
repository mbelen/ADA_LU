			header 
				h1 Cupcake Ipsum Inc.
			block content
			footer
				div
					h3 Cupcake ipsum inc
					p Nosotros
					p Información
					p Contacto
					p Política de privacidad
					p Términos de uso
				div
					h3 Candy canes brownie
					p biscuit
					p fruitcake
					h3 Croissant
					p Gummi bears
					p Marzipan
				div
					h3 Tiramisu
					p biscuit
					p Gummi bears
					p Marzipan
					p Lollipop
					p Topping
				div.redes
					h2 ¡Seguinos en las redes!
					i.fab.fa-instagram
					i.fab.fa-pinterest
					i.fab.fa-facebook

			script(src='https://code.jquery.com/jquery-3.3.1.min.js' integrity='sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=' crossorigin='anonymous')
