		link(rel='stylesheet' href='/stylesheets/owl.carousel.min.css')
		link(rel='stylesheet' href='/stylesheets/owl.theme.default.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
			nav
				div.navitems
					a(href="/" id="home") home
					a(id="categorias" href="/categorias") categorías
					a(href="/productos") productos
					a(href="/registro") Login/Registrarse
				div.buscador
					input(type="text" id="busqueda" placeholder="Soy decorativo, por ahora")
					a(href="")
